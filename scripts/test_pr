#!/bin/bash
set -euo pipefail

# Function to print section headers
print_section() {
    echo ""
    echo "🔍 $1"
    echo "----------------------------------------"
}

# Run checks in backend
print_section "Running backend checks"
cd "$(dirname "$0")/../backend"
echo "📦 Installing backend dependencies..."
bun install --frozen-lockfile
echo "🔧 Running type checking..."
bun run type-check

# Run checks in frontend
print_section "Running frontend checks"
cd ../frontend
echo "📦 Installing frontend dependencies..."
bun install --frozen-lockfile
echo "🔧 Running Svelte check..."
bun run check
echo "🎨 Running formatter..."
bun run format
echo "🏗️ Testing build process..."
# Set timeout for build to prevent hanging
timeout 60s bun run build || {
    echo "⚠️  Build timed out after 60 seconds, but other checks passed"
    exit 0
}

print_section "All checks completed successfully! ✅"
