#!/bin/bash
set -euo pipefail

export NODE_ENV=test
export PARENT_DIR="$(dirname "$(dirname "$(realpath "$0")")")"

# Function to print section headers
print_section() {
    echo ""
    echo "ğŸ” $1"
    echo "----------------------------------------"
}

print_section "Preparing for tests"
cd "$PARENT_DIR"
bun run db:setup:force

# Run checks in backend
print_section "Running backend checks"
cd "$PARENT_DIR/backend"
echo "ğŸ“¦ Installing backend dependencies..."
bun install --frozen-lockfile
echo "ğŸ”§ Running checks..."
bun run check
echo "- Running tests..."
bun run test

# Run checks in frontend
print_section "Running frontend checks"
cd "$PARENT_DIR/frontend"
echo "ğŸ“¦ Installing frontend dependencies..."
bun install --frozen-lockfile
echo "ğŸ”§ Running Svelte check..."
bun run check
echo "ğŸ¨ Running formatter..."
bun run format
echo "- Building frontend..."
bun run build

print_section "Running E2E tests"
cd "$PARENT_DIR"
bun run test:e2e

print_section "All checks completed successfully! âœ…"
