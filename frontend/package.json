{
  "name": "frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && tsc -p tsconfig.backend-types.json --emitDeclarationOnly && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "cd .. && bun run format:check && cd frontend && eslint .",
    "lint:eslint": "eslint .",
    "test": "vitest -- --run"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "^1.2.21",
    "@types/dompurify": "^3.2.0",
    "@vitest/browser": "^3.2.3",
    "dompurify": "^3.3.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.5.0",
    "playwright": "^1.57.0",
    "svelte": "^5.43.14",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.2.2",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^3.2.3",
    "vitest-browser-svelte": "^1.1.0"
  },
  "dependencies": {
    "daisyui": "^5.5.8",
    "hono": "^4.8.3",
    "lucide-svelte": "^0.562.0",
    "marked": "^16.3.0"
  }
}
