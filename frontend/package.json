{
  "name": "frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && tsc -p tsconfig.backend-types.json --emitDeclarationOnly && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "cd .. && bun run format:check && cd frontend && eslint .",
    "lint:eslint": "eslint .",
    "test": "vitest -- --run"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.1.13",
    "@types/dompurify": "^3.2.0",
    "@vitest/browser": "^3.2.3",
    "dompurify": "^3.2.6",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "playwright": "^1.55.1",
    "svelte": "^5.39.4",
    "svelte-check": "^4.3.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.5",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^3.2.3",
    "vitest-browser-svelte": "^1.1.0"
  },
  "dependencies": {
    "daisyui": "^5.1.12",
    "hono": "^4.9.9",
    "lucide-svelte": "^0.544.0",
    "marked": "^16.3.0"
  }
}
