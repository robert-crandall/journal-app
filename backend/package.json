    "hono": "^4.8.3",
    "openai": "^5.9.0",
    "postgres": "^3.4.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "^1.2.17",
    "@types/node": "^24.0.7",
    "@types/pg": "^8.15.4",
    "dotenv": "^17.0.0",
    "drizzle-kit": "^0.31.4",
