{
  "name": "journal-app-new",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun scripts/start-dev.ts",
    "dev:force": "bun run dev --force",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:e2e": "playwright test",
    "test": "bun run format && bun run check && bun run lint",
    "test:all": "bun run test && bun run test:e2e",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:setup": "tsx scripts/setup-db.ts",
    "db:setup:force": "tsx scripts/setup-db.ts --force",
    "db:reset": "tsx scripts/setup-db.ts --reset",
    "db:reset:force": "tsx scripts/setup-db.ts --reset --force"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.53.2",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.22.2",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/marked": "^6.0.0",
    "@types/node": "^24.0.10",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "svelte": "^5.35.2",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
    "vite-plugin-devtools-json": "^0.2.1"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "commander": "^14.0.0",
    "crypto-js": "^4.2.0",
    "daisyui": "^5.0.43",
    "dotenv": "^17.0.1",
    "drizzle-orm": "^0.40.1",
    "lucide-svelte": "^0.525.0",
    "marked": "^16.0.0",
    "nanoid": "^5.1.5",
    "postgres": "^3.4.7"
  }
}
